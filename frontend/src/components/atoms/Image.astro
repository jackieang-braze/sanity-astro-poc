---
interface Props {
  src?: string
  alt?: string
  width?: string
  minWidth?: string
  maxWidth?: string
  offsetX?: string
  offsetY?: string
  borderRadius?: string
}
const {
  width,
  minWidth,
  maxWidth,
  src = 'https://placehold.co/150x150?text=Hello+World',
  alt,
  offsetX = 0,
  offsetY = 0,
  borderRadius = 0,
} = Astro.props
---

<img data-comp-image src={src} alt={alt} />

<style
  define:vars={{
    width: width,
    'min-width': minWidth,
    'max-width': maxWidth,
    'offset-x': offsetX,
    'offset-y': offsetY,
    'border-radius': borderRadius,
  }}
>
  [data-comp-image] {
    width: var(--width);
    min-width: var(--min-width);
    max-width: var(--max-width);
    transform: translateX(var(--offset-x)) translateY(var(--offset-y));
    border-radius: var(--border-radius);
  }
</style>
