---
import type { TshirtSize } from 'bl-astro'

interface Props {
	bg?: 'white' | 'soft-blue-fuchsia'
	width?: TshirtSize
	paddingX?: TshirtSize
	paddingY?: TshirtSize
	gap?: TshirtSize
}
const { bg = 'white', width, paddingX = 'sm', paddingY = 'sm', gap = 'sm' } = Astro.props
const bgDirective =
	bg === 'soft-blue-fuchsia' ? 'var(--grad-soft-blue-fuchsia)' : `var(--color-${bg})`
const widthDirective = width ? `var(--width-body-${width})` : '100%'
const paddingXDirective = paddingX ? `var(--space-${paddingX})` : '0'
const paddingYDirective = paddingY ? `var(--space-${paddingY})` : '0'
const gapDirective = gap ? `var(--space-${gap})` : '0'
---

<div data-comp-card>
	<slot />
</div>

<style
	define:vars={{
		bg: bgDirective,
		'padding-x': paddingXDirective,
		'padding-y': paddingYDirective,
		width: widthDirective,
		gap: gapDirective
	}}
>
	[data-comp-card] {
		display: flex;
		flex-direction: column;
		background: var(--bg);
		border: 1px solid var(--color-gray-200);
		border-radius: 1rem;
		box-shadow: var(--shadow-8dp);
		margin-inline: auto;
		padding: var(--padding-y) var(--padding-x);
		max-width: var(--width);
		gap: var(--gap);
		height: max-content;
	}
</style>
