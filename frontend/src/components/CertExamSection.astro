---
import type { CertificationExam } from '@lib/sanity'
import { getExamViaID } from '@lib/sanity'
import CourseCard from '@components/molecules/CourseCard.astro'
import CourseCardGrid from '@components/molecules/CourseCardGrid.astro'
import Heading from './atoms/Heading.astro'
import Text from './atoms/Text.astro'
import Container from './atoms/Container.astro'
import HeadingGroup from './molecules/HeadingGroup.astro'
interface Props {
  heading: string
  subheading: string
  pageExams: CertificationExam[]
}
const { pageExams, heading, subheading } = Astro.props
---

<Container width='md'>
  <HeadingGroup
    size='h2'
    heading={heading}
    subheading={subheading}
  />

  <CourseCardGrid>
    {
      pageExams.map((exam) => (
        <>
          <CourseCard
            type='certification'
            title={exam.title}
            ctaHref={`/${exam.slug.current}`}
            shortDescription={exam.shortDescription}
          />
        </>
      ))
    }
  </CourseCardGrid>
</Container>

<style>
  div {
    display: flex;
    gap: var(--space-sm);
    flex-direction: column;
    width: fit-content;
    padding: var(--space-sm);
    border: 1px solid black;
  }
</style>
